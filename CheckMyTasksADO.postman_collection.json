								{
									"key": "password",
									"value": "{{PAT}}",
									"type": "string"
								},
								{
									"key": "username",
									"value": "{{username}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n  \"query\": \"Select [System.Id] From WorkItems Where [System.IterationPath] = @CurrentIteration('[{{projectName}}]\\\\{{teamName}}') AND [System.WorkItemType] = 'Task' AND [System.AssignedTo] = @Me\"\r\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "https://dev.azure.com/{{organization}}/_apis/wit/wiql?api-version={{version}}",
							"protocol": "https",
							"host": [
								"dev",
								"azure",
								"com"
							],
							"path": [
								"{{organization}}",
								"_apis",
								"wit",
								"wiql"
							],
							"query": [
								{
									"key": "api-version",
									"value": "{{version}}"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Check Items",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									""
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"var status = pm.environment.get(\"validateStatus\");\r",
									"var jsonData = JSON.parse(responseBody);\r",
									"var all_items = jsonData.value\r",
									"\r",
									"for (const item in all_items) {\r",
									"    data = all_items[item]\r",
									"    identifier = data.id\r",
									"    fields = data.fields\r",
									"    pm.test(identifier+\" status\", () => {\r",
									"        pm.expect(fields[\"System.State\"]).to.eql(status);\r",
									"    });    \r",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "basic",
							"basic": [
								{
									"key": "password",
									"value": "{{PAT}}",
									"type": "string"
								},
								{
									"key": "username",
									"value": "{{username}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "https://dev.azure.com/{{organization}}/_apis/wit/workitems?ids={{items}}&fields=System.WorkItemType,System.State,System.CommentCount,System.Title,Microsoft.VSTS.Common.Activity,System.Description&api-version={{version}}",
							"protocol": "https",
							"host": [
								"dev",
								"azure",
								"com"
							],
							"path": [
								"{{organization}}",
								"_apis",
								"wit",
								"workitems"
							],
							"query": [
								{
									"key": "ids",
									"value": "{{items}}"
								},
								{
									"key": "fields",
									"value": "System.WorkItemType,System.State,System.CommentCount,System.Title,Microsoft.VSTS.Common.Activity,System.Description"
								},
								{
									"key": "api-version",
									"value": "{{version}}"
								}
							]
						}
					},
					"response": []
				}
			]
